{
  "name": "hope",
  "displayName": "Hope",
  "description": "Customized version control system",
  "version": "0.0.1",
  "publisher": "RatLabs",
  "engines": {
    "vscode": "^1.92.0"
  },
  "enableProposedApi": true,
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:mySidebarView",
    "onCommand:extension.openMySidebarView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.openMySidebarView",
        "title": "Open My Sidebar View"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mySidebarContainer",
          "title": "My Sidebar",
          "icon": "resources/activity-bar-icon.png"
        }
      ]
    },
    "views": {
      "mySidebarContainer": [
        {
          "id": "mySidebarView",
          "name": "My Sidebar View"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/firebase": "^3.2.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "firebase": "^10.12.5"
  }
}

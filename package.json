{
  "name": "hope",
  "displayName": "Hope",
  "description": "Customized version control system",
  "version": "0.0.6",
  "publisher": "samoraAI",
  "engines": {
    "vscode": "^1.92.0"
  },
  "enableProposedApi": false,
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.openSidebar",
    "onView:mySidebar",
    "onCommand:extension.uploadCode",
    "onCommand:extension.openWebviewPanel",
    "onCommand:extension.openVersion"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.openSidebar",
        "title": "Open My Sidebar"
      },
      {
        "command": "extension.uploadCode",
        "title": "Upload Code"
      },
      {
        "command": "extension.openWebviewPanel",
        "title": "Open Webview Panel"
      },
      {
        "command": "extension.openVersion",
        "title": "Open Version"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mySidebarContainer",
          "title": "My Sidebar",
          "icon": "resources/activity-bar-icon.png"
        }
      ]
    },
    "views": {
      "mySidebarContainer": [
        {
          "id": "mySidebar",
          "name": "My Sidebar"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test --headless"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SAwandya/Hope"
  },
  "devDependencies": {
    "@types/firebase": "^3.2.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "firebase": "^10.12.5"
  },
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "dark"
  },
  "icon": "images/logo.png"
}
